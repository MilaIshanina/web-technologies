extends layout

block content
    script(src="/scripts/panels.js")
    div(class="container p-2 bg-info text-light col-12 ")
        div(class="row col-12")
            div(class="col col-6 d-flex align-items-center justify-content-start")
                div(class="h4 m-0 p-0")= title
            div(class="col col-6 d-flex justify-content-end align-items-center")
                div(class="nav-item")
                    a(class="text-light nav-link" href="/main") Главная
                div(class="nav-item")
                    a(class="text-light nav-link" href="/users") Участники
                div(class="nav-item")
                    a(class="text-light nav-link" href="/settings") Настройки

    div(class="container p-3 col-12")
        form(class="container p-3 col-6 " method="POST" action="/settings/edit")
            table(class="table")
                tr
                    th Дата акуциона
                    td
                        input(class="form-control " name ="date" type="date" value=settings.date)
                tr
                    th Время начала
                    td
                        input(class="form-control " name ="time" type="time" value=settings.time)
                tr
                    th Таймаут продажи картины
                    td
                        input(class="form-control " name ="timeout" type="time" value=settings.timeout)
                tr
                    th Интервал времени до окончания торга
                    td
                        input(class="form-control " name ="duration" type="time" value=settings.duration)
                tr
                    th Время на изучение картины
                    td
                        input(class="form-control " name ="info_timeout" type="time" value=settings.info_timeout)
            div(class="col-12 d-flex justify-content-center")
                button(class="d-flex align-items-center btn btn-info p-2 mr-3" type="Submit") Сохранить